<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@drawable/ic_menu" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.65"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Songs"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="50dp"
            android:src="@drawable/ic_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/txtplay_time"
            android:paddingLeft="30dp"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:text="Play All(21.04.13)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#e69927"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shuffle"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/List_song"
        android:layout_width="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/Control"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:background="#e69927">
            <TextView
                android:id="@+id/txtSong"
                android:layout_marginLeft="20dp"
                android:paddingTop="10dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageView
                   android:id="@+id/img_backward"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_backwardarrows"/>
                <ImageView
                    android:id="@+id/img_pause"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="50dp"
                    android:tag="Pause"
                    android:src="@drawable/ic_pauses"/>
                <!--<ImageView-->
                <!--android:id="@+id/img_play"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="0.3"-->
                <!--android:layout_height="50dp"-->
                <!--android:src="@drawable/ic_play"/>-->
                <ImageView
                    android:id="@+id/img_forward"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"

                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_forwardbutton"/>

            </LinearLayout>

        </LinearLayout>
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="true"
                android:background="#f5f5f5"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/imgback"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="40dp"
                            android:padding="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_left_arrow"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:text="Now Playing"
                            android:textStyle="bold"
                            android:layout_marginLeft="70dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:id="@+id/img_more"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:src="@drawable/ic_more"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/cover_image"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cover"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#00000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <!--<com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="150dp">-->
                            <!--<com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar-->
                                <!--android:id="@+id/VolSeekBar"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="0dp"-->
                                <!--android:splitTrack="false"-->
                                <!--app:seekBarRotation="CW90" /> &lt;!&ndash; Rotation: CW90 or CW270 &ndash;&gt;-->
                        <!--</com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>-->
                        <TextView
                            android:id="@+id/txtsongname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shinzo wo Sasageyo"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/txtalbumname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Linked Horizon"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/img_repeat"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingRight="30dp"
                            android:tag="Repeat"
                            android:src="@drawable/ic_repeat"
                            />
                        <ImageView
                            android:id="@+id/img_fav"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingRight="30dp"
                            android:src="@drawable/ic_favorite"/>
                        <ImageView
                            android:id="@+id/img_shuffle"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_shuffle"/>
                    </LinearLayout>
                    <!--<SeekBar-->
                    <!--android:id="@+id/seekBar"-->
                        <!--android:layout_width="300dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:max="100" >-->
                    <!--</SeekBar>-->
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:thumb="@drawable/ic_location" />
                    <!--<com.github.florent37.androidslidr.Slidr-->
                        <!--android:id="@+id/seekBar"-->
                        <!--android:layout_width="250dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--app:slidr_region_leftColor="#4CAF50"-->
                        <!--app:slidr_step_colorizeAfterLast="true" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="0.9">
                        <TextView
                            android:id="@+id/txtelapsed_time"
                            android:layout_marginLeft="30dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:text="0.00"/>
                        <TextView
                            android:id="@+id/txtremaing_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/img_share"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="30dp"
                            android:paddingRight="20dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_share"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:id="@+id/img_backward1"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_backward_arrows"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:id="@+id/img_pause1"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="50dp"
                            android:tag="Pause"
                            android:src="@drawable/ic_pause"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:id="@+id/img_forward1"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_forward_button"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:id="@+id/img_speaker"
                            android:tag="Mute"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_speaker"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>

</LinearLayout>